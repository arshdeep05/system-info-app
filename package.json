{
  "name": "system-info-app",
  "version": "1.0.0",
  "main": "main.js",
  "homepage": "./",
  "description": "Electron app to show system information",
  "author": "ADS",
  "scripts": {
    "start": "concurrently \"npm:react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "react-start": "react-scripts start",
    "electron": "electron .",
    "electron-build": "npm run build && electron .",
    "build": "react-scripts build",
    "dist": "npm run build && electron-builder",
    "dist-mac": "npm run build && electron-builder --mac --publish=never"
  },
  "build": {
    "productName": "SystemInfoInstaller",
    "files": [
      "build/**/*",
      "main.js",
      "preload.js"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "directories": {
      "output": "release-builds"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "os": "^0.1.2",
    "primeflex": "^3.3.1",
    "primereact": "^10.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "url": "^0.11.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "electron": "^36.2.1",
    "electron-builder": "^24.6.0",
    "react-scripts": "^5.0.1",
    "wait-on": "^7.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
